<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/conan"></de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/tv_name"
            android:layout_toEndOf="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm ngọc hà"
            android:layout_marginStart="30dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tv_ngaysinh"
            android:layout_toEndOf="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:text="Năm sinh: 2000"
            android:layout_marginStart="30dp"
            android:padding="3dp"
            android:textSize="16dp"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:id="@+id/tv_chuyennganh"
            android:layout_toEndOf="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ngaysinh"
            android:text="Chuyên ngành: CNTT"
            android:layout_marginStart="30dp"
            android:padding="3dp"
            android:textSize="16dp"
            android:textColor="@color/black">

        </TextView>
        <TextView
            android:id="@+id/tv_truong"
            android:layout_toEndOf="@+id/img_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chuyennganh"
            android:text="Trường: ĐH CNTT-ĐHQG TP.HCM"
            android:layout_marginStart="30dp"
            android:padding="3dp"
            android:textSize="16dp"
            android:textColor="@color/black">

        </TextView>
        <View
            android:layout_below="@+id/img_user"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
